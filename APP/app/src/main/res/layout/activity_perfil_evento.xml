<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#AFBFD0"
tools:context=".View.PerfilEvento">

<Button
    android:id="@+id/button"
    android:layout_width="137dp"
    android:layout_height="41dp"
    android:layout_marginTop="72dp"
    android:layout_marginEnd="28dp"
    android:layout_marginRight="28dp"
    android:background="#00ff00"
    android:clickable="false"
    android:text="Apuntado"
    android:textColor="#ffffff"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<LinearLayout
    android:id="@+id/frameLayout"
    android:layout_width="414dp"
    android:layout_height="240dp"
    android:layout_marginBottom="356dp"
    android:background="@drawable/fondo"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="8dp"
    android:paddingEnd="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent">


    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Viva Suecia"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Sab, Marzo 3 | 23:00"
            android:textColor="#707070"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="3sp"
        android:paddingEnd="3sp">

        <TextView
            android:id="@+id/eventDesc"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventDescContent"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:text="Suecia es un grupo de Indie Rock con toques
                                Shoegaze originario de la ciudad de Murcia (España)
                                y formado en 2013."
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventLocation"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventLocationContent"
            android:layout_width="318dp"
            android:layout_height="44dp"
            android:text="Discoteca Playa Club Andén de Riazor,
                              S/n,15011 A Coruña"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="411dp"
    android:layout_height="240dp"
    android:layout_marginBottom="116dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent">
    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/eventMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

<LinearLayout
    android:layout_width="409dp"
    android:layout_height="114dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <Chronometer
        android:id="@+id/eventClock"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="H:MM:SS"
        android:textSize="40sp"
        android:background="@drawable/fondo"
        android:padding="30sp"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>