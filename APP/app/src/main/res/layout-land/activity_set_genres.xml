<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/genres"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/genre_grid"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:columnCount="4"
                android:rowCount="6">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pop"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/pop">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/pop"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pop"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rock"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/rock">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/rock"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rock"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/hiphop"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/hiphop">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/hiphop"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hiphop"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="23sp"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/latin"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/latin">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/latina"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/latin"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dance"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/dance">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/dance"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dance"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/indie"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/indie">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/indie"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/indie"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/classic"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/classic">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/clasica"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/classic"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/reggae"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/reggae">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/reggae"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reggae"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/trap"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/trap">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/trap_round"
                            android:scaleType="fitXY"
                            android:scaleX="1.40"
                            android:scaleY="1.40"
                            android:tint="#6F000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trap"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:elevation="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/genre_grid"
                android:src="@drawable/arrow_forward_24px"/>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>